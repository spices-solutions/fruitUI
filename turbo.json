{
  "$schema": "https://turbo.build/schema.json",
  "experimentalUI": true,
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "build": {
      "dependsOn": ["lint","^build"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["lint","build"]
    }
  }
}