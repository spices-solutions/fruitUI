---
import type { MarkdownLayoutProps } from 'astro'
import WathqnyConfig from 'config'
import { DocsLayout } from 'wtqdocs'

const { sidebar } = WathqnyConfig

type Props = MarkdownLayoutProps<{
  title: string
  description: string
  heading: string
}>

const { frontmatter } = Astro.props;
---

<DocsLayout title={frontmatter.title} description={frontmatter.description} heading={frontmatter.heading ?? frontmatter.title}>
  <div class="wtq-card-container-category">
    {
      sidebar?.map((doc) => {
        return (
          <a href={`/docs/${doc.id}`}>
            <div class="wtq-card wtq-shadow">
              <h2 class="wtq-card-title">{doc.label}</h2>
            </div>
          </a>
        )
      })
    }
  </div>
</DocsLayout>
