---
import { Image } from "astro:assets";

import WathqnyConfig from "../wathqny.config";

const { navbar } = WathqnyConfig;

import logo_image from "../assets/treadmark.svg";
---

<nav class="wtq-navbar" role="navigation">
  <div class="wtq-navbar-overlay" aria-hidden></div>
  <a href="/" aria-label="Go to the homepage" role="link">
    <div class="wtq-brand">
      <Image alt="logo" width={40} height={40} src={logo_image} />
      <span>{navbar?.brand.name}</span>
    </div>
  </a>
  <span
    tabindex="0"
    class="wtq-toggle"
    aria-expanded="false"
    aria-haspopup="menu"
    role="menu"></span>
  <ul class="wtq-links">
    {
      navbar?.Items.map((Item) => {
        return (
          <li role="menuitem">
            <a href={Item.href}>{Item.item}</a>
          </li>
        );
      })
    }
  </ul>
</nav>

<script>
  import { navbar } from "./navbar";

  navbar();
</script>
