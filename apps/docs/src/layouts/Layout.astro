---
import Navbar from "../components/Navbar.astro";
import Head from "./Head.astro";
import Sidebar from "./Sidebar.astro";

interface Props {
  sidebar: boolean;
  title: string;
  description: string;
  keywords?: string;
}

const { title, description, keywords, sidebar } = Astro.props;
---

<html xml:lang="en" lang="en" dir="ltr" class="light">
  <Head title={title} description={description} keywords={keywords} />
  <body>
    <a id="skip" href="#main-content">skip to the main content</a>
    <Navbar />
    <div class="wtq-page">
      {sidebar && <Sidebar transition:persist />}
      <div class="wtq-content">
        <div class="wtq-container" transition:animate="slide">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
