---
import { Head, Navbar, SkipLink } from "wtqdocs";
import WathqnyConfig from "/wathqny.config";
import "../custom.scss";
import { CodeBlock } from "wtqcode";
---

<html
  xml:lang={WathqnyConfig.locale}
  lang={WathqnyConfig.locale}
  dir={WathqnyConfig.locale_dir}
  class="light">
  <Head />
  <body>
    <SkipLink />
    <Navbar />
    <main id="main-content">
      <section class="hero">
        <h1 class="title">
          FruitUI a modular <br />
          styling framework
        </h1>
        <h2 class="subtitle">
          use the components you want, styles you need,
          <br /> the performance you deserve
        </h2>
        <div class="get-started flex gap-5">
          <a href="/docs/getting-started/overview">
            <button class="btn primary">Get started</button>
          </a>
        </div>
        <CodeBlock
          lang="html"
          themes={{
            light: "aurora-x",
            dark: "dark-plus",
          }}
          code={`<!-- js -->
          <script src="https://cdn.jsdelivr.net/npm/spices-fruitui"></script>
          
          <!-- css -->
          
          <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/spices-fruitui/style">`}
        />
      </section>
    </main>
  </body>
</html>
