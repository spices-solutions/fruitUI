---
import Layout from "../../../../packages/wtqdocs/src/components/Layout.astro";
import Breadcrumbs from "../layouts/breadcrumbs.astro";
import WathqnyConfig from "../../../apps/docs/wathqny.config";

const { sidebar } = WathqnyConfig;
---

<Layout sidebar={true} title="docs" description="main docs page">
  <Breadcrumbs />
  <h1 class="wtq-main-heading">Categorys</h1>

  <main class="anim-slide-botto" id="main-content">
    <div class="wtq-card-container">
      {
        sidebar?.map((doc) => {
          return (
            <a href={"/docs/" + doc.toLowerCase()}>
              <div class="wtq-card">
                <h2 class="wtq-card-title">{doc.replace("-", " ")}</h2>
              </div>
            </a>
          );
        })
      }
    </div>
  </main>
</Layout>
