---
import { getEntry } from "astro:content";
import Layout from "../../../../../packages/wtqdocs/src/components/Layout.astro";
import { type CollectionEntry, getCollection } from "astro:content";
import CategoryCards from "../../layouts/categoryCards.astro";
import Breadcrumbs from "../../layouts/breadcrumbs.astro";
import Docs from "../docs.astro";


export async function getStaticPaths() {
  let docs = await getCollection("docs");

  return docs.map((doc) => {
    return {
      params: { category: doc.data.category.toLowerCase()  },
      props: { doc },
    };
  });
}

interface Props {
  doc: CollectionEntry<"docs">;
}

const { doc } = Astro.props;

---
<Layout
  sidebar={true}
  title={doc.data.category.replace("-"," ").toLowerCase()}
  description={doc.data.description}
  keywords={doc.data.title}>
  <Breadcrumbs/>
  <main class="anim-slide-botto" id="main-content">
  <h1 class="wtq-main-heading">{doc.data.category.replace("-"," ")}</h1>
  <CategoryCards />
  </main>
</Layout>
