---
import LinkItem from './LinkItem.astro'
import CategoryToggle from './CategoryToggle.astro'

interface Props {
  href?: string
  name: string
  isActive: boolean
}

const { name, href, isActive } = Astro.props;
---

<li role="tab" class="category_collapse--wrapper" class:list={{ 'wtq-active': isActive }}>
  <CategoryToggle name={name} />
  <ul class="category-collapse" class:list={{ 'wtq-active': isActive }}>
    <li class="collapse-item">
      {href ? <LinkItem href={href} name={name} /> : <slot /> }
    </li>
  </ul>
</li>
