---
import {
  Image,
  type LocalImageProps,
  type RemoteImageProps,
} from "astro:assets";

export interface Props {
  image: string | LocalImageProps | RemoteImageProps;
  name: string;
  role: string;
}

const { image, name, role } = Astro.props;
---

<style lang="scss">
  .wtq-avatar-contanier {
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 1rem 0px;
  .wtq-avatar {
    border-radius: 50%;
  }
  div {
    .wtq-avatar-name {
      color: var(--accent-900);
      margin: 0;
      line-height: 1.2;
      font-weight: 500;
      font-size: 0.9rem;
    }
    .wtq-avatar-role {
      margin: 0;
      line-height: 1.2;
      font-size: .8rem;
      font-weight: 300;
      letter-spacing: .5pt;
      color: var(--accent-600);
    }
  }
}
</style>

<div class="wtq-avatar-contanier">
  <Image
    class="wtq-avatar"
    width={48}
    height={48}
    src={image}
    alt="user avatar"
  />
  <div>
    <p class="wtq-avatar-name">{name}</p>
    <p class="wtq-avatar-role">{role}</p>
  </div>
</div>
