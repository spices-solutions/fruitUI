---
import LinkItem from "./LinkItem.astro";
import CategoryToggle from "./CategoryToggle.astro";

interface Props {
  href?: string;
  name: string;
}

const { name, href } = Astro.props;
---

<CategoryToggle name={name} />
{
  href ? (
    <>
      <ul class="category_collapse">
        <li class="collapse_item">
          <LinkItem href={href} name={name} />
        </li>
      </ul>
    </>
  ) : (
    <>
      <ul class="category_collapse">
        <li class="collapse_item">
          <slot />
        </li>
      </ul>
    </>
  )
}
