---
import SidebarRefine from '../Aside/Sidebar.astro'
import Breadcrumbs from '../Navigation/breadcrumbs.astro'
import BaseLayout from './BaseLayout.astro'

export interface Props {
  title?: string | undefined
  description?: string | undefined
  OGImage?: string | undefined
  OGImageAlt?: string | undefined
  keywords?: string | string[] | undefined
  heading?: string | undefined
}

const { title, keywords, description, OGImage, OGImageAlt, heading }
  = Astro.props as Props;
---

<BaseLayout {title} {keywords} {description} {OGImage} {OGImageAlt}>
  <SidebarRefine />
  <div class="wtq-content">
    <div class="wtq-container">
      <Breadcrumbs />
      <main id="main-content">
        <h1 class="wtq-main-heading">{heading ?? title}</h1>
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>
