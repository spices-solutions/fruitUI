---
// import Head from "../Head.astro";
import Head from '../experimental/Head.astro'
import Navbar from '../Navigation/Navbar.astro'
import SkipLink from '../Navigation/SkipLink.astro'

export interface Props {
  title?: string | undefined
  description?: string | undefined
  OGImage?: {
    src: string;
    alt: string;
  }
  keywords?: string | string[] | undefined
}

const { title, keywords, description, OGImage }
  = Astro.props as Props;
---

<html
  xml:lang={Astro.currentLocale}
  lang={Astro.currentLocale}
  dir={Astro.currentLocale === 'ar' ? 'rtl' : 'ltr'}
  class="light"
>
  <Head {title} {keywords} {description} {OGImage} />
  <body>
    <SkipLink />
    <Navbar />
    <div class="wtq-page">
      <slot />
    </div>
  </body>
</html>
