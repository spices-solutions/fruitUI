---
import Head from "./Head.astro";
import Navbar from "./Navbar.astro";
import Sidebar from "./Sidebar.astro";
import SkipLink from "./SkipLink.astro";

import WathqnyConfig from "/wathqny.config";
---

<style is:global lang="scss">
  $accent-20: rgb(254, 254, 254) !default;
  $accent-50: #fdfdfd !default;
  $accent-100: #f4f4f5 !default;
  $accent-200: #e4e4e7 !default;
  $accent-300: #d4d4d8 !default;
  $accent-400: #a1a1aa !default;
  $accent-500: #71717a !default;
  $accent-600: #52525b !default;
  $accent-700: #3f3f46 !default;
  $accent-800: #27272a !default;
  $accent-900: #18181b !default;
  $accent-950: #0f0f11 !default;

  $font-3xl: 2.986rem;
  $font-2xl: 2.488rem;
  $font-xl: 2.074rem;
  $font-lg: 1.728rem;
  $font-md: 1.44rem;
  $font-sm: 1.2rem;
  $font-xs: 1rem;

  @font-face {
    font-family: "Inter";
    font-weight: 100 900;
    src: url("/font/InterVariable.woff2") format("woff2");
    font-display: optional;
  }

  :root {
    --font-3xl: #{$font-3xl};
    --font-2xl: #{$font-2xl};
    --font-xl: #{$font-xl};
    --font-lg: #{$font-lg};
    --font-md: #{$font-md};
    --font-sm: #{$font-sm};
    --font-xs: #{$font-xs};
    color: var(--accent-900);
    background-color: var(--body-background);
    color-scheme: light dark;

    &.light {
      color-scheme: light;
      --accent-20: #{$accent-20};
      --accent-50: #{$accent-50};
      --accent-100: #{$accent-100};
      --accent-200: #{$accent-200};
      --accent-300: #{$accent-300};
      --accent-400: #{$accent-400};
      --accent-500: #{$accent-500};
      --accent-600: #{$accent-600};
      --accent-700: #{$accent-700};
      --accent-800: #{$accent-800};
      --accent-900: #{$accent-900};
      --accent-950: #{$accent-950};
      --background-hover: #00000010;
      --body-background: white;
      --navbar-background: white;

      --sidebar-border-color: #{rgba($accent-900, 0.1)};
    }

    @media (prefers-color-scheme: light) {
      --accent-20: #{$accent-20};
      --accent-50: #{$accent-50};
      --accent-100: #{$accent-100};
      --accent-200: #{$accent-200};
      --accent-300: #{$accent-300};
      --accent-400: #{$accent-400};
      --accent-500: #{$accent-500};
      --accent-600: #{$accent-600};
      --accent-700: #{$accent-700};
      --accent-800: #{$accent-800};
      --accent-900: #{$accent-900};
      --accent-950: #{$accent-950};
      --background-hover: #00000010;
      --body-background: white;
      --navbar-background: white;

      --sidebar-border-color: #{rgba($accent-900, 0.1)};
    }

    @media (prefers-color-scheme: dark) {
      color-scheme: dark;
      --accent-50: #{$accent-900};
      --accent-20: #{$accent-800};
      --accent-100: #{$accent-800};
      --accent-200: #{$accent-700};
      --accent-300: #{$accent-600};
      --accent-400: #{$accent-500};
      --accent-500: #{$accent-400};
      --accent-600: #{$accent-300};
      --accent-700: #{$accent-200};
      --accent-800: #{$accent-100};
      --accent-900: #{$accent-50};
      --background-hover: #ffffff10;
      --body-background: #{$accent-900};
      --navbar-background: #252529;

      --sidebar-border-color: #{rgba($accent-50, 0.2)};
    }
  }

  .wtq-page {
    display: flex;
    height: 100%;
  }

  .wtq-container {
    padding-inline: 15px;
    margin-inline: auto;
    width: 100%;

    @media screen and (min-width: 600px) {
      max-width: 550px;
    }

    @media screen and (min-width: 850px) {
      max-width: 700px;
    }

    @media screen and (min-width: 1000px) {
      max-width: 650px;
    }

    @media screen and (min-width: 1200px) {
      max-width: 900px;
    }

    @media screen and (min-width: 1500px) {
      max-width: 1200px;
    }
  }

  .wtq-main-heading {
    margin-top: 10px;
    margin-bottom: 10px;
    text-transform: capitalize;
  }

  .dark .browser-app {
    background-color: $accent-100;
  }

  .browser-app {
    border: 1px solid $accent-200;
    background-color: $accent-50;
    box-shadow:
      0 10px 25px -5px rgb(0 0 0 / 0.05),
      0 8px 10px -6px rgb(0 0 0 / 0.1);
    margin: 50px 0;
    border-radius: 10px;
  }

  .browser-app .header {
    display: flex;
    padding: 15px 20px;
    gap: 10px;
  }

  .browser-app .header .dot {
    width: 15px;
    height: 15px;
    border-radius: 50%;
  }

  .browser-app .header .dot:nth-child(1) {
    background-color: #ed6b60;
  }

  .browser-app .header .dot:nth-child(2) {
    background-color: #f5be4f;
  }

  .browser-app .header .dot:nth-child(3) {
    background-color: #62c554;
  }

  .wtq-card-container-category {
    display: grid;
    gap: 1.3rem;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    margin-top: 30px;

    @media screen and (max-width: 768px) {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }

    .wtq-card {
      height: 100%;
      border: 1px solid var(--accent-200);
      background-color: var(--accent-20);
      border-radius: 20px;
      transition: all 200ms ease;
      padding: 25px;
      box-shadow: 0 10px 25px -5px rgb(0 0 0 / 0.05);

      .dark & {
        border-color: var(--accent-20);
      }

      &:hover {
        transform: translateY(-3%);
      }

      .wtq-card-title {
        color: var(--accent-800);
        font-weight: 600;
        line-height: 1.5;
        font-size: var(--font-md);
        margin: 0;
      }

      .wtq-card-subtitle {
        margin: 0;
        color: var(--accent-700);
        font-weight: 400;
        letter-spacing: 0.3pt;
        font-size: var(--font-xs);
      }
    }
  }

  .wtq-post-container {
    display: grid;
    justify-content: center;
    grid-template-columns: 692px;
    margin-top: 30px;
    gap: 1rem;

    @media screen and (max-width: 768px) {
      grid-template-columns: 550px;
    }

    @media screen and (max-width: 600px) {
      grid-template-columns: 100%;
    }

    .dark & {
      border-color: var(--accent-20);
    }
  }

  .wtq-post {
    border: 1px solid var(--accent-200);
    background-color: var(--accent-20);
    border-radius: 20px;
    transition: all 200ms ease;
    padding: 25px;
    box-shadow: 0 10px 25px -5px rgb(0 0 0 / 0.05);
  }
  .wtq-post-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .wtq-post-content {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }

  .wtq-cover {
    border: 1px solid var(--accent-50);
    border-radius: 40px;
    aspect-ratio: 16/9;
    height: auto;
    box-shadow: 0 10px 25px -5px rgb(0 0 0 / 0.1);
  }

  .wtq-post-title {
    color: var(--accent-800);
    font-weight: 600;
    line-height: 1.5;
    font-size: var(--font-md);
    margin: 0;
  }

  .wtq-post-subtitle {
    margin: 0;
    color: var(--accent-700);
    font-weight: 400;
    letter-spacing: 0.3pt;
    font-size: var(--font-xs);
  }

  .wtq-sidebar-toggle {
    padding: 0 5px;
    margin: 15px 0px;
    border: 0;
    border-radius: 10px;
    cursor: pointer;
    background-color: transparent;
    color: var(--accent-800);
  }

  .wtq-content {
    overflow-y: auto;
    width: 100%;
    height: calc(100vh - 50px);
    padding-bottom: 40px;
  }
</style>

<html
  xml:lang={WathqnyConfig.locale}
  lang={WathqnyConfig.locale}
  dir={WathqnyConfig.locale_dir}
  class="light">
  <Head />
  <body>
    <SkipLink />
    <Navbar />
    <div class="wtq-page">
      <Sidebar />
      <div class="wtq-content">
        <div class="wtq-container">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
